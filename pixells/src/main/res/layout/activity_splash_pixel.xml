<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/darker_gray">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imgCenter"
        android:contentDescription="@string/img_content_description"
        android:src="@drawable/ic_main_pixels"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPixell"
        android:text="@string/txt_pixell_app"
        android:fontFamily="@font/pixel_emulator"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/imgCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/txt_pixell_app"/>

    <ImageView
        android:id="@+id/imageView_splash_footer_logo"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="80dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_android"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="104:20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/pixel_emulator"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="@string/txt_designed_by"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_splash_footer_logo"
        tools:text="@string/txt_designed_by"/>

</androidx.constraintlayout.widget.ConstraintLayout>